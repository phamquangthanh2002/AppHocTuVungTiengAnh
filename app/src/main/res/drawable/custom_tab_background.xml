<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" /> <!-- Đặt bán kính bo tròn -->
            <solid android:color="@android:color/transparent" /> <!-- Màu nền -->
            <stroke
                android:color="#CCCCCC"
            android:width="2dp" /> <!-- Kích thước đường viền -->
        </shape>
    </item>
    <!-- Shadow -->
    <item android:right="1dp" android:left="1dp" android:bottom="3dp">
        <shape>
            <corners android:radius="16dp" /> <!-- Đặt bán kính bo tròn -->
            <solid android:color="#44ffffff" /> <!-- Màu đổ bóng -->
        </shape>
    </item>
</layer-list>